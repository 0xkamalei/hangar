{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Proxy Subscription Manager",
  "version": "0.1.0",
  "identifier": "com.lei.proxy-sub-manager",
  "build": {
    "beforeDevCommand": "bun run dev:frontend",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Proxy Subscription Manager",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../subscriptions.json",
      "../_docs/basic.yml",
      "../basic_test.yml"
    ]
  }
}
